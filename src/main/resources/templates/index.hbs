<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Greeting</title>
</head>
<body>
<div class="container">
    <br><br>
    <h2>Greeting WebApp</h2>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-8">
            <div class="container">
                <br>
                <h4 class="header">Greet Person</h4>

                <form action="/" method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="select">
                                Name
                            </label>
                        </div>
                        <input type="text" class="form-control" aria-label="Text input with dropdown button" value="" name="username" id="user_input" required>
                        <select class="custom-select" id="select" name="language">
                            {{#each languages}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Greet</button>
                </form>
                <br>
                {{#if greeting}}
                    <div class="alert alert-primary" role="alert">
                        {{this.greeting}}
                    </div>
                {{/if}}

                {{#if counter}}
                    <p>Counter:{{this.counter}}</p>
                {{/if}}

            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script>
        $("#user_input").keyup(function (e) {
            var regex = /^[a-zA-Z]+$/;
            (regex.test(this.value) !== true) ? this.value = this.value.replace(/[^a-zA-Z]+/, '') : this.value
        });
 </script>
</body>
</html>